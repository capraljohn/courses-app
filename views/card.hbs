<div class="title">
    <h1>My cart</h1>
</div>
<div class="card">
{{#if courses.length}}
<table>
        <thead>
          <tr>
              <th>Courses</th>
              <th>Number</th>
              <th>Action</th>
          </tr>
        </thead>

        <tbody>
            {{#each courses}}
          <tr>
            <td>{{title}}</td>
            <td>{{count}}</td>
            <td><button class="btn btn-small js-remove" data-id="{{id}}" data-csrf="{{@root.csrf}}">Remove</button></td>
          </tr>
          {{/each}}
        </tbody>
</table>

<p><strong>Price:</strong><span class="price">{{price}}</span></p>


{{else}}
<p>Cart empty</p>
{{/if}}
</div>

<form action="/orders" method="POST">
<button type="submit" class="btn">Orders</button>
<input type="hidden" name="_csrf" value="{{csrf}}">
</form>