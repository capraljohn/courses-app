<div class="title">
    <h1>My orders</h1>
</div>

{{#if orders.length}}
{{#each orders}}
    <div class="row">
        <div class="col s6 offset-s3">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">
                        Order ID: {{_id}}
                    </span>
                    <p>Time of order:</p><p class="datas">{{date}}</p>
                    <p><em>{{user.userID.name}}</em>(<span>{{user.userID.email}}</span>)</p>

                    <ol>
                        {{#each courses}}
                            <li>
                                {{course.title}} (x<strong>{{count}}</strong>)

                            </li>

                        {{/each}}
                    </ol>
                    <hr>
                    <p>Price: <span class="price">{{price}}</span></p>
                </div>
            </div>
        </div>
    </div>

{{/each}}

{{else}}
<p>In orders empty</p>
{{/if}}